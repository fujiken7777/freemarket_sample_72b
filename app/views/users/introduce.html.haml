.header
  .header__box
    .header__box__up
      .header__box__up--icon
        = link_to image_tag('logo.png', class: "btn"),root_path
      .header__box__up--search
        = form_with(url: "#", local: true, method: :get, class: "search-form") do |form|
          = form.text_field :keyword, placeholder: "キーワードから探す", class: "search-input" 
          = button_tag type: 'submit', class: 'search-btn' do
            %i.fas.fa-search.click 
    .header__box__under
      .header__box__under__left
        %ul.left--box
          %li.list__category
            = link_to "#", class:"first-btn" do
              カテゴリー
          %li.list__category
            = link_to "#", class:"first-btn" do
              ブランド
      .header__box__under__right
        %ul.right--box
          -if user_signed_in?
            %li.list__login
              = link_to "ログアウト",destroy_user_session_path, method: :delete, class:"btn"
          -else
            %li.list__login
              = link_to "ログイン",new_user_session_path, class:"btn"
            %li.list__category
              = link_to "新規会員登録",signup_index_path, class:"btn"
.wrraper
  .mypage
    = render 'users/side-bar'
    .user-content-main
      = form_for @introduce do |f|
        .user-group
          .title
            本人情報変更
          .error
            = render "devise/shared/error_messages", resource: @introduce
          .name
            = f.label :first_name, "お名前(全角)"
            .name-group
              .first
                = f.text_field :first_name, placeholder: "例) 山田",class: "first-name-field",id: "first-name"
              .last
                = f.text_field :last_name, placeholder: "例) 太郎",class: "last-name-field",id: "last-name"
          .name-read
            = f.label :first_name_read, "お名前カナ(全角)"
            .name-read-group
              .first-read
                = f.text_field :first_name_read,placeholder: "例) ヤマダ",class: "first-name-read-field",id: "first-name-read"
              .last-read
                = f.text_field :last_name_read, placeholder: "例) タロウ",class: "last-name-read-field",id: "last-name-read"
          .birthday
            = f.label :birthday, "生年月日"
            .birthday-select
              = raw sprintf(f.date_select(:birthday,id: "birthday",use_month_numbers: true,start_year: 1930,end_year: (Time.now.year - 18),:include_blank => true ,date_separator: '%s'),'年 ', '月 ') + '日'
          .send
            = f.submit '変更する',class: "send-btn"
= render 'products/footer'