
.header
  .header__box
    .header__box__up
      .header__box__up--icon
        = link_to image_tag('logo.png', class: "btn"),root_path
      .header__box__up--search
        = form_with(url: "#", local: true, method: :get, class: "search-form") do |form|
          = form.text_field :keyword, placeholder: "キーワードから探す", class: "search-input" 
          = button_tag type: 'submit', class: 'search-btn' do
            %i.fas.fa-search.click 
    .header__box__under
      .header__box__under__left
        %ul.left--box
          %li.list__category
            = link_to "#", class:"first-btn" do
              カテゴリー
          %li.list__category
            = link_to "#", class:"first-btn" do
              ブランド
      .header__box__under__right
        %ul.right--box
          -if user_signed_in?
            %li.list__login
              = link_to "ログアウト",destroy_user_session_path, method: :delete, class:"btn"
          -else
            %li.list__login
              = link_to "ログイン",new_user_session_path, class:"btn"
            %li.list__category
              = link_to "新規会員登録",signup_index_path, class:"btn"
.wrraper
  .mypage
    = render 'users/side-bar'
    .address-change
      = form_for @address, url: user_path ,method: :patch do |f|
        .address-change-header
          .change-title
            発送元・お届け先住所変更
          .change-group
            = render "devise/shared/error_messages", resource: @address
            .zip-code
              = f.label :zip_code, "郵便番号"
              %span.form-group__require 必須
              .zip-code-group
                = f.text_field :zip_code,placeholder: "例）123-4567",class: "zip-code-field",id: "zip-code"
            .prefecture
              = f.label :prefecture_id, "都道府県"
              %span.form-group__require 必須
              .prefecture-group
                = f.select :prefecture_id , Address.prefecture_ids.keys, {} ,class: "prefecture-field",id: "prefecture"
            .city
              = f.label :city, "市区町村"
              %span.form-group__require 必須
              .city-group
                = f.text_field :city, placeholder: "例）札幌市",class: "city-field",id: "city"
            .address
              = f.label :address1, "番地"
              %span.form-group__require 必須
              .address-group
                = f.text_field :address1, placeholder: "例）青葉1-1-1",class: "address-field",id: "address1"
            .address-last
              = f.label :address2, "建物名"
              %span.form-group__any 任意
              .address-last-group
                = f.text_field :address2, placeholder: "例）柳ビル103",class: "address-last-field"
            .change-btn
              = f.submit '変更する',class: "send-btn"
.footer
  .footer__content
    %ul.footer__content__up
      %li.footer__content__up__box
        %h1.text FURIMAについて
        %p.text--content= link_to "会社概要（運営会社）",root_path, class:"btn"
        %p.text--content= link_to "プライバシーポリシー",root_path, class:"btn"
        %p.text--content= link_to "FURIMA利用規約",root_path, class:"btn"
        %p.text--content= link_to "ポイントに関する特約",root_path, class:"btn"
      %li.footer__content__up__box
        %h1.text FURIMAを見る
        %p.text--content= link_to "カテゴリー一覧",root_path, class:"btn"
        %p.text--content= link_to "ブランド一覧",root_path, class:"btn"
      %li.footer__content__up__box
        %h1.text FURIMAについて
        %p.text--content= link_to "FURIMAガイド",root_path, class:"btn"
        %p.text--content= link_to "FURIMAロゴ利用ガイドライン",root_path, class:"btn"
        %p.text--content= link_to "お知らせ",root_path, class:"btn"
    .footer__content__under
      = link_to image_tag('logo-white.png', class: "btn"),root_path
      %p © FURIMA
