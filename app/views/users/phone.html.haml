= render "products/header"
.header-under
  .box-under
    .categoty-link
      = link_to "カテゴリ" ,"#", class:"link-btn",id: "hover-a"
    .bland-link
      = link_to "ブランド" ,"#", class:"link-btn",id: "hover-b"
    .gretel-link
      - breadcrumb :phone
      = breadcrumbs separator:  "&rsaquo;",class: "crumb-btn"
  = render "products/under"

.wrraper
  .mypage
    = render 'users/side-bar'
    .phone-change
      = form_for @phone do |f|
        .phone-group
          .title
            電話番号変更
          .error
            = render "devise/shared/error_messages", resource: @phone
          .phone
            = f.label :phone_num, "携帯電話の番号"
            .phone-num
              = f.text_field :phone_num,class: "phone-field",placeholder: "例)080-1234-5678",id: "phone-num"
          .send
            = f.submit '変更する',class: "send-btn"
= render 'products/footer'