.header
  .header__box
    .header__box__up
      .header__box__up--icon
        = link_to image_tag('logo.png', class: "btn"),root_path
      .header__box__up--search
        = form_with(url: "#", local: true, method: :get, class: "search-form") do |form|
          = form.text_field :keyword, placeholder: "キーワードから探す", class: "search-input" 
          = button_tag type: 'submit', class: 'search-btn' do
            %i.fas.fa-search.click 

    .header__box__under
      .header__box__under__left
        %ul.left--box
          %li.list__category
            = link_to "#", class:"first-btn" do
              カテゴリー
          %li.list__category
            = link_to "#", class:"first-btn" do
              ブランド
      .header__box__under__right
        %ul.right--box
          -if user_signed_in?
            %li.list__login
              = link_to "ログアウト",destroy_user_session_path, method: :delete, class:"btn"
          -else
            %li.list__login
              = link_to "ログイン",new_user_session_path, class:"btn"
            %li.list__category
              = link_to "新規会員登録",signup_index_path, class:"btn"
.wrraper
  .mypage
    = render 'users/side-bar'
    .card__regist
      .card__regist__head
        %h2 クレジットカード情報入力
      .card__regist__content
        .card__regist__content__box
          = form_with model: @card, url: '#', method: 'POST', id: 'card_id', class: 'card-registration-form', novalidate: 'novalidate', html: { name: 'inputForm' } do |f|
            .card-info__content
              .card-info__content__form-group
                %label{ for: 'payment_card_no' } カード番号
                %span.card-info__content-require 必須
                %input.card-info__input-default{ type: 'text', id: 'token', placeholder: '半角数字のみ', maxlength: '16' }
                %ul.card-info__has-error-text{ id: 'card-no-error-wrapper' }
                %ul.card-info__list
                  %li
                    = image_tag 'viza.png', width: '40', height: '30'
                  %li
                    = image_tag 'ms.png', width: '34', height: '20'
                  %li
                    = image_tag 'dc.png', width: '30', height: '20'
                  %li
                    = image_tag 'dis.png', width: '30', height: '45'
                  %li
                    = image_tag 'saison.png', width: '21', height: '20'
                  %li
                    = image_tag 'ame.png', width: '30', height: '20'
                  %li
                    = image_tag 'jcb.png', width: '32', height: '20'
              .card-info__form-expire
                %label{ for: 'payment_card_expire' } 有効期限
                %span.card-info__form-require 必須
                %br
                .card-info__form-expire__deadline
                  = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'form-card__month__select'
                  %span 月
                  = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'form-card__year__select'
                  %span 年
                %ul.card-info__has-error-text{ id: 'expire-mm-error-wrapper' }
                %ul.card-info__has-error-text{ id: 'expire-yy-error-wrapper' }
              .card-info__form-group
                %label{ for: 'payment_card_security_code' } セキュリティコード
                %span.card-info__content-require 必須
                %input.card-info__input-default{ type: 'text', id: 'cvc', placeholder: 'カード背面4桁もしくは3桁の番号' }
                %ul.signup-main__has-error-text{ id: 'security-code-error-wrapper' }
                .card-info__seqcode
                  .card-info__seqcode--text{ id: 'seqcode-tips-toggle' }
                    %span.card-info__form-question
                    カード裏面の番号とは？
              -#       .card-info__seqcode--info.is-show{ id: 'seqcode-tips-content' }
              -#         カードの裏面をご参照ください。
              -#         %br
              -#         = image_tag '//pcweb-assets.mercdn.net/assets/img/signup/seq-card.png?1152353370', width: '240'
              -# %p.card-info__has-error-text{ id: 'primary-error' }
              %button.card-info__content--form--btn
                = f.submit "追加する", class:"btn", id: "token_submit"
= render 'products/footer'