  .search__left
    = search_form_for @q, url:search_products_path do |f|
      .search__left__list
        .search__left__list__box
          .search__left__list__box__choice
            詳細検索
          .search__left__list__box__keywords
            = f.label "キーワードを追加する"
            = f.search_field :product_name_cont, placeholder: "洋服", class: "keyword" 
          .search__left__list__box__brand
            = f.label " ブランド名から探す"
            =f.search_field :brand_cont, class: "keyword"
          .search__left__list__box__money
            = f.label "価格"
          .search__left__list__box__setting
            =f.search_field :price_gteq, class: "keyword",placeholder: "¥Min"
            〜
            =f.search_field :price_lt, class: "keyword",placeholder: "¥Max"
          .search__left__list__box__postage
            "配送料の負担
          .label-box
            =f.label "着払い(購入者負担)"
            =f.check_box :delivery_fee_id_not_eq, id:1
          .label-box--second
            =f.label "送料込み(出品者負担)"
            =f.check_box :delivery_fee_id_eq, id:1
