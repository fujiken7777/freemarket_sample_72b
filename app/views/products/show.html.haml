= render "header"
%nav.category-bar
  %ul
    %li
      = link_to 'FURIMA', "/"
    %li
      %i.fa.fa-angle-right
    %li
      = link_to 'メンズ', "#"
    %li
      %i.fa.fa-angle-right
    %li
      = link_to 'トップス', "#"
    %li
      %i.fa.fa-angle-right
    %li
      = link_to 'シャツ', "#"
    %li
      %i.fa.fa-angle-right
    %li
      %p
        = @product.product_name
    
.product-main
  .product-main__show
    .top-content
      .products-box
        %h2.products-box__name
          = @product.product_name
        .products-box__images
          %ul.top-list
            %li.top-image
              = image_tag 'pict-reason-01.jpg', class:"top-icon"
              -# = @product.images.image.each do |image|
              -#   = image_tag image, class: 'owl-carousel'
              %ul.sub-images
                %li.sub-image
                  = image_tag 'pict-reason-01.jpg', class:"sub-icon"
                %li.sub-image
                  = image_tag 'pict-reason-01.jpg', class:"sub-icon"
                %li.sub-image
                  = image_tag 'pict-reason-01.jpg', class:"sub-icon"
        .products-box__price
          .products-box__price__texts
            .price-text ¥
            .price-text
              = @product.price
          .products-box__price__detail
            %span (税込)
            -# = @products.delivery_fee
            %span 送料込み
        .products-box__detail
          = @product.description
        .products-box__info
          %table
            %tbody
              %tr
                %th 出品者
                %td
                  = @product.user.nickname
              %tr
                %th カテゴリー
                %td
                  = link_to 'メンズ', "#"
                  %br/
                  = link_to 'トップス', "#"
                  %br/
                  = link_to 'シャツ', "#"
              %tr
                %th ブランド
                %td
              %tr
                %th 商品のサイズ
                %td
              %tr
                %th 商品の状態
                %td 新品/未使用
              %tr
                %th 配送料の負担
                %td 着払い（購入者負担）
              %tr
                %th 発送元の地域
                %td
                  = link_to '北海道', "#"
              %tr
                %th 発送日の目安
                %td 1-2日で発送
        .products-box__option
          .favorite
            .favorite__btn
              %i.fa.fa-star お気に入り 0
          .optional
            .optional__btn
              = link_to "#", class: "optional__btn__link" do
                %i.fa.fa-flag 不適切な商品の通報
        .comments-box
          = form_for [@product, @comment] do |c|
            = c.text_area :text, class: "comment-area"
            .caution-area
              %p
                相手のことを考え丁寧なコメントを心がけましょう。
              %p
                不快な言葉遣いなどは利用制限や退会処分となることがあります。
            .comment-btn
              = c.submit "", class: "comment-btn__submit"
              %i.fa.fa-comment コメントする

      .product-links
        .product-links__before
          = link_to "#", class: "product-link-btn" do
            %i.fa.fa-angle-left
            %span 前の商品
        .product-links__after
          = link_to "#", class: "product-link-btn" do
            %span 後ろの商品
            %i.fa.fa-angle-right
      
      .see-more
        = link_to  'メンズをもっと見る', "#"
           

= render "footer"
