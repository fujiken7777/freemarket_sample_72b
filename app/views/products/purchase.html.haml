-# 商品購入確認画面
.purchase-verification
  .purchase-verification__header
    .purchase-verification__header__logo
      = link_to image_tag('logo.png', class: "btn"),root_path
  .purchase-verification__main
    .purchase-verification__main__up
      購入内容の確認
    .purchase-verification__main__box
      .product 
        .photo
          = image_tag @product.images[0].image.url, size: '200x200'
        .name
          = @product.product_name
      %ul.detail
        %li.money 
          ="¥#{@product.price}"
        %li.postage 送料込み
    .purchase-verification__main__pay
      .purchase-verification__main__pay__point
        ポイントはありません
      .purchase-verification__main__pay__money
        .purchase-verification__main__pay__money--left
          支払金額
        .purchase-verification__main__pay__money--right
          ="¥#{@product.price}"
      .purchase-verification__main__pay__decision
        = form_tag(action: :pay, method: :post, class: "form-buy") do
          %script.payjp-button{:src => "https://checkout.pay.jp",:type => "text/javascript" ,"data-text" => "購入する" ,"data-key" => ENV['PAYJP_KEY'], class: "buy-button"}
        -# = link_to "#", class:"decision-btn" do
        -#   購入する
    .purchase-verification__main__delivery
      .address
        %ul.address--delivery
          配送先
        %li=@product.user.address.zip_code
        %li="#{@product.user.address.prefecture_id} #{@product.user.address.city} #{@product.user.address.address1}#{@product.user.address.address2}"
        %li="購入者 #{@product.user.first_name} #{@product.user.last_name} " 
        .address--change
          = link_to address_user_path(current_user.id), class:"address--change--btn" do
            変更する
    .purchase-verification__main__payment
      .method
        %ul.method--number
          支払方法
        %li **** **** ****4242
        %li 12 / 20
        .method--change
          = link_to "#", class:"method--change--btn" do
            変更する
  .purchase-verification__footer
    %ul
      %li
        = link_to 'プライバシーポリシー', "#", class: "footer-text"
      %li
        = link_to 'FURIMA利用規約', "#", class: "footer-text"
      %li
        = link_to '特定商取引に関する表記', "#", class: "footer-text"
    .products-exhibit__footer__logo
      = link_to image_tag('logo.png', class: "products-exhibit__footer__logo__icon"),root_path
      %p © FURIMA