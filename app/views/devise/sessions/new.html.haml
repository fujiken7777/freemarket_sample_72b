.log-in
  .log-in-new
    .new-user-account
      .new-user-account-title
        アカウントをお持ちでない方
      .new-user-account-create
        - if devise_mapping.registerable? && controller_name != 'registrations'
          = link_to "新規会員登録", new_registration_path(resource_name),class:".new-user-account-btn"
    .facebook
      = link_to 'Facebookでログイン', "#",class: "facebook-btn"
      %i.fab.fa-facebook-square.facebook-icon
      -# = link_to 'Facebookで登録', user_facebook_omniauth_authorize_path, method: :post
    .google
      = link_to 'Googleでログイン', "#", class:"google-btn"
      -# = link_to 'Googleで登録', user_google_oauth2_omniauth_authorize_path, method: :post
  .log-in-main
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .email
        = f.label :email
        .email-group
          = f.email_field :email, autofocus: true, autocomplete: "email-field"
      .pass
        = f.label :password
        .pass-group
          = f.password_field :password, autocomplete: "pass-field"
      - if devise_mapping.rememberable?
        .check-box
          = f.check_box :remember_me
          = f.label :remember_me
      .send
        = f.submit "ログイン",class: "send-btn"
      .foget-pass
        - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          = link_to "パスワードお忘れの方", new_password_path(resource_name),class: "foget-field"
    -# = render "devise/shared/links"
