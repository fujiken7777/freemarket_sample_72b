.header-log
  .log-field
    = link_to image_tag('logo.png', class: "icon-user-top"),root_path
.log
  .log-in
    .log-in-header
      .new-user-account
        .new-user-account-title
          アカウントをお持ちでない方はこちら
        .new-user-account-create
          - if devise_mapping.registerable? && controller_name != 'registrations'
            = link_to "新規会員登録", new_registration_path(resource_name),class:"new-user-account-btn"
    .log-in-main
      .facebook
        .facebook-field
          = link_to 'Facebookでログイン', "#",class: "facebook-btn"
          %i.fab.fa-facebook-square.facebook-icon
        -# = link_to 'Facebookで登録', user_facebook_omniauth_authorize_path, method: :post
      .google
        .google-font
          = link_to 'Googleで登録する', "#",class: "google-btn"
          .google-photo
            = image_tag 'google.jpg', class:"google-photo-size"
        -# = link_to 'Googleで登録', user_google_oauth2_omniauth_authorize_path, method: :post
    .log-in-bottom
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .email
          .email-group
            = f.email_field :email, autofocus: true, autocomplete: "email-field",placeholder: "メールアドレス",class: "email-field"
        .pass
          .pass-group
            = f.password_field :password, autocomplete: "pass-field",placeholder: "パスワード",class: "pass-field"
        .send
          = f.submit "ログイン",class: "send-btn"
        .foget-pass
          - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
            = link_to "パスワードお忘れの方", new_password_path(resource_name),class: "foget-field"
