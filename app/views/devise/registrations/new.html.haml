= form_for(@user, url: user_registration_path) do |f|
  = render "devise/shared/error_messages", resource: @user

  .nickname
    = f.label :nickname, "ニックネーム"
    %span.form-group__require 必須
    .nickname-group
      = f.text_field :nickname, placeholder: "例) フリマ太郎",class: "nickname-field"
  .name
    = f.label :first_name, "お名前(全角)"
    %span.form-group__require 必須
    .name-group
      = f.text_field :first_name,autofocus: true, placeholder: "例) 山田",class: "first-name-field"
      = f.text_field :last_name,autofocus: true, placeholder: "例) 太郎",class: "last-name-field"
  .name-read
    = f.label :first_name_read, "お名前カナ(全角)"
    %span.form-group__require 必須
    .name-read-group
      = f.text_field :first_name_read,placeholder: "例) ヤマダ",class: "first-name-read-field"
      = f.text_field :last_name_read, placeholder: "例) タロウ",class: "last-name-read-field"
  .email
    = f.label :email, "メールアドレス"
    %span.form-group__require 必須
    .email-grpup
      = f.text_field :email,autofocus: true,placeholder: "PC・携帯どちらでも可",class: "email-field"
  .pass
    = f.label :password, "パスワード"
    %span.form-group__require 必須
    .pass-group
      = f.password_field :password,placeholder: "7文字以上の半角英数字",class: "pass-field"
  .pass-two
    = f.label :password, "パスワード(確認)"
    %span.form-group__require 必須
    .pass-two-group
      = f.password_field :password_confirmation,placeholder: "7文字以上の半角英数字",class: "pass-two-field"
  .birthday
    = f.label :birthday, "生年月日"
    %span.form-group__require 必須
    .birthday-select
      -# = date_select :date, Date.today, use_month_numbers: true
      != sprintf(f.date_select(:birthday, prefix:'birthday',with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
  .phone
    = f.label :phone_num, "携帯電話の番号"
    %span.form-group__any 任意
    .phone-num
      = f.text_field :phone_num,class: "phone-field"
  .send-btn
    = f.submit '次へ進む',class: "send-btn"
