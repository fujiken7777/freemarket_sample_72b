.user-header
  .user-header-icon
  .user-header-now
    .class-first
      会員情報
      %i.fas.fa-circle.icon-red
    .class-second
      送付先情報
      %i.fas.fa-circle.icon-gray
    .class-third
      完了
      %i.fas.fa-circle.icon-gray
.user-content
  .user-content-header
    会員情報入力
  .user-content-main
    = form_for(@user, url: user_registration_path) do |f|
      = render "devise/shared/error_messages", resource: @user
      .nickname
        = f.label :nickname, "ニックネーム"
        %span.form-group__require 必須
        .nickname-group
          = f.text_field :nickname, placeholder: "例) フリマ太郎",class: "nickname-field"
      .name
        = f.label :first_name, "お名前(全角)"
        %span.form-group__require 必須
        .name-group
          = f.text_field :first_name, placeholder: "例) 山田",class: "first-name-field"
          = f.text_field :last_name, placeholder: "例) 太郎",class: "last-name-field"
      .name-read
        = f.label :first_name_read, "お名前カナ(全角)"
        %span.form-group__require 必須
        .name-read-group
          = f.text_field :first_name_read,placeholder: "例) ヤマダ",class: "first-name-read-field"
          = f.text_field :last_name_read, placeholder: "例) タロウ",class: "last-name-read-field"
      .email
        = f.label :email, "メールアドレス"
        %span.form-group__require 必須
        .email-grpup
          = f.text_field :email,placeholder: "PC・携帯どちらでも可",class: "email-field"
      .pass
        = f.label :password, "パスワード"
        %span.form-group__require 必須
        .pass-group
          = f.password_field :password,placeholder: "7文字以上の半角英数字",class: "pass-field"
      .pass-two
        = f.label :password, "パスワード(確認)"
        %span.form-group__require 必須
        .pass-two-group
          = f.password_field :password_confirmation,placeholder: "7文字以上の半角英数字",class: "pass-two-field"
      .birthday
        = f.label :birthday, "生年月日"
        %span.form-group__require 必須
        .birthday-select
          = raw sprintf(f.date_select(:birthday,use_month_numbers: true,start_year: 1930,end_year: (Time.now.year - 18),default: Date.new(2000, 2, 22),date_separator: '%s'),'年 ', '月 ') + '日'       
          -# = f.date_select :birthday, start_year: 100.years.ago(Date.today).year, default: { year: 2000, month: 2, day: 22 }
      .phone
        = f.label :phone_num, "携帯電話の番号"
        %span.form-group__any 任意
        .phone-num
          = f.text_field :phone_num,class: "phone-field"
      .commit
        .commit-font-first
          「次へ進む」のボタンを押すことにより
          = link_to "利用規約",class:"commit-field"
          に
        .commitfont-end_year
          同意したものとみなします

      .send-btn
        = f.submit '次へ進む',class: "send-btn"
