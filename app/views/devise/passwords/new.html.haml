.user-header
  .user-field
    .user-header-icon
      = link_to image_tag('logo.png', class: "user-top"),root_path
    .user-header-now
.user-content
  .pass-content-all
    .user-content-header
      パスワードお忘れの方
    .user-content-main
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| 
        .error
          = render "devise/shared/error_messages", resource: resource
        .email
          = f.label :email, "メールアドレス"
        .email-group
          = f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレスを入力してください。",class: "email-field",id: "email"
        .submit
          = f.submit "メールを送信する",class:"send-btn"
        .render
          .login
            = link_to "ログインはこちらから", new_session_path(resource_name),class:"log-field"
          .signup
            = link_to "新規登録はこちらから", new_registration_path(resource_name),class:"up-field"